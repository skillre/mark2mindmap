{
  "name": "mark2mindmap",
  "framework": "nextjs",
  "installCommand": "npm install",
  "buildCommand": "mkdir -p public/mindmaps && npm run build",
  "functions": {
    "app/api/markdown-to-mindmap/route.ts": {
      "includeFiles": "public/mindmaps/**",
      "memory": 1024
    },
    "app/api/mindmap-file/[filename]/route.ts": {
      "memory": 1024
    }
  }
} 